{
  "name": "ruleta",
  "version": "2.2.1",
  "private": true,
  "type": "module",
  "description": "Ruleta de la Suerte",
  "author": "Julian-Hernandez",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "electron": "cross-env NODE_ENV=development npx electron .",
    "build:vite": "vite build",
    "build:electron": "electron-builder --publish always",
    "build": "npm run build:vite && npm run build:electron"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "finalhandler": "^2.1.0",
    "firebase": "^12.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.5.0",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "react-toastify": "^10.0.5",
    "serve-static": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "electron": "^39.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.0"
  },
  "build": {
    "appId": "com.ruletaflorida.app",
    "productName": "Ruleta Florida",
    "publish": [
      {
        "provider": "github",
        "owner": "Herjulian",
        "repo": "Ruleta-Puente-del-Sol"
      }
    ],
    "asar": true,
    "files": [
      "dist/**",
      "electron.cjs",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
